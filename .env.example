# Environment variables for the Nuxt Theme Builder project

# ─── Launch Gate ─────────────────────────────────────────────────────────
# Enable production launch gating (redirects unauthenticated visitors to /coming-soon)
NUXT_PUBLIC_COMING_SOON_ENABLED=false

# Password required to bypass the coming-soon gate (must be set when gate is enabled)
NUXT_COMING_SOON_PASSWORD=

# ─── Vercel ──────────────────────────────────────────────────────────────
# Token for on-demand ISR revalidation via Vercel bypass
VERCEL_BYPASS_TOKEN=

# ─── AI / MCP ────────────────────────────────────────────────────────────
# API key for Context7, used for AI theme generation and other AI features
CONTEXT7_API_KEY=

# ─── E2E Test Keys ───────────────────────────────────────────────────────
# OpenAI API key for E2E testing of the AI theme generation feature
TEST_OPENAI_API_KEY=

# Google API key for E2E testing of the AI theme generation feature
TEST_GOOGLE_API_KEY=

# Anthropic API key for E2E testing of the AI theme generation feature
TEST_ANTHROPIC_API_KEY=
